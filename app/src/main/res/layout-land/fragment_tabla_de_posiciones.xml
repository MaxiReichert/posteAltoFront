<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="posteAltoMovile.fragment.TablaDePosicionesFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo_celeste"
        android:orientation="vertical"
        tools:context= "posteAltoMovile.activity.PrincipalActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/fondo_gris_boton"
            android:gravity="center"
            android:text="Tabla de Posiciones"
            android:textColor="@color/letras_y_titulos"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoLista"
            android:text="                EQUIPO                          PG     PP       TF       TC         D"
            android:textColor="@color/letras_y_titulos"
            android:textStyle="bold" /> -->

        <!-- <ListView
            android:id="@+id/lvTabla"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondoLista"/> -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/TablaPosiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fondoLista" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewEquipo"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_span="2"
                        android:background="@color/fondoLista"
                        android:gravity="center"
                        android:text="EQUIPO"
                        android:textColor="@color/letras_y_titulos"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPG"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:background="@color/fondoLista"
                        android:gravity="center"
                        android:text="PG"
                        android:textColor="@color/letras_y_titulos"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPP"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:background="@color/fondoLista"
                        android:gravity="center"
                        android:text="PP"
                        android:textColor="@color/letras_y_titulos"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewTF"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:background="@color/fondoLista"
                        android:gravity="center"
                        android:text="TF"
                        android:textColor="@color/letras_y_titulos"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewTC"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:background="@color/fondoLista"
                        android:gravity="center"
                        android:text="TC"
                        android:textColor="@color/letras_y_titulos"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewD"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:background="@color/fondoLista"
                        android:gravity="center"
                        android:text="D"
                        android:textColor="@color/letras_y_titulos"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>
       </ScrollView>
    </LinearLayout>

</FrameLayout>