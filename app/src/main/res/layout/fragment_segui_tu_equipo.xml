<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="posteAltoMovile.fragment.SeguiTuEquipo">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menuPpal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo_celeste"
        android:orientation="vertical"
        tools:context="posteAltoMovile.activity.PrincipalActivity">

        <include
            android:id="@+id/toolbarDesing"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@color/fondo_gris_boton"
            android:gravity="center"
            android:text="Seleccioná tus Equipos"
            android:textColor="@color/letras_y_titulos"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txtSubTitulo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="30dp"
            android:background="@color/fondo_gris_boton"
            android:gravity="center"
            android:text="Recibí notificaciones de sus partidos"
            android:textColor="@color/letras_y_titulos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans" />


        <ListView
            android:id="@+id/lvSegui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondoLista" />
    </LinearLayout>


</FrameLayout>