        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fondo_toolbar_y_letras_botones</item>
        <item name="colorPrimaryDark">@color/fondo_celeste</item>
        <item name="colorAccent">@color/fondo_toolbar_y_letras_botones</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="Theme.PosteALtoMovile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
